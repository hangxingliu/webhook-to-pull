{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "The schema for configuration",
	"type": "object",
	"properties": {
		"port": {
			"type": "number",
			"description": "The port server listen to"
		},
		"repositories": {
			"type": "object",
			"additionalProperties": {
				"type": "object",
				"required": [
					"local",
					"secret"
				],
				"properties": {
					"local": {
						"type": "string",
						"description": "Local directory git repository clone to"
					},
					"secret": {
						"type": "string"
					},
					"branch": {
						"type": "string"
					},
					"remote": {
						"type": "string",
						"description": "The remote name of git repository"
					},
					"events": {
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"type": {
						"type": "string",
						"enum": [
							"bitbucket",
							"github",
							"gogs"
						]
					}
				}
			}
		}
	}
}
